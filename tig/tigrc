# 画面を垂直方向に分割する
# set vertical-split = yes

set blame-view = date:default,local=1 author:full id line-number:true,interval=1 text
set main-view = line-number:true,interval=10 date:default,local=1 author:full id commit-title:true,graph=true,refs=true
set refs-view = date:default,local=1 author:full id ref:true commit-title:true
set status-view = file-name status:long
set tree-view = date:default,local=1 author:full id file-size:units mode file-name

set line-graphics = ascii
set horizontal-scroll = 20%
